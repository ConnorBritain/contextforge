# Client-side environment variables
# Only variables prefixed with REACT_APP_ will be available to the React application

# API URL
REACT_APP_API_URL=http://localhost:5000/api

# Firebase Client Configuration 
# These are the public credentials from your Firebase project settings
REACT_APP_FIREBASE_API_KEY=your_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id  # Optional, only if using Analytics

# Feature flags
REACT_APP_ENABLE_CLOUD_FUNCTIONS=false