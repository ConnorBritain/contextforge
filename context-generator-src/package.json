{
  "name": "contextforge",
  "version": "1.0.0",
  "description": "Application to generate professional context documents",
  "main": "server/src/server.js",
  "scripts": {
    "start": "node server/src/server.js",
    "server": "nodemon server/src/server.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint \"**/*.{js,jsx}\"",
    "test": "jest",
    "install-all": "node scripts/install-helper.js && npm install && cd client && npm install",
    "postinstall": "node scripts/install-helper.js",
    "setup-react": "node scripts/setup-react-app.js",
    "docker-setup": "node scripts/docker-setup.js",
    "docker-rebuild": "node scripts/docker-setup.js --rebuild"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.16.0",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "markdown-it": "^14.0.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "openai": "^4.24.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "xss-clean": "0.1.4"
  },
  "devDependencies": {
    "eslint": "^9.22.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "overrides": {
    "xss-clean": "0.1.4",
    "glob": "^10.3.10",
    "inflight": "^1.0.6",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}